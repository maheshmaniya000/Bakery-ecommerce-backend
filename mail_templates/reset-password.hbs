    <table border="0" cellpadding="0" cellspacing="0" role="presentation" width="100%">
        <tr>
            <td align="center">
                <table border="0" class="mobile" cellpadding="0" cellspacing="0" role="presentation" width="600"
                    style="background-color: #f7f7f7; color: #000000; font-family: CustomFont; font-size: 18px; line-height: 36px; margin: 0; padding: 0;">

                    <!-- Logo image -->
                    <tr>
                        <td align="center" style="padding: 20px 0px;">
                            <img src="https://assets-olsen-bake-house.s3-ap-southeast-1.amazonaws.com/images/olsen-horizontal-logo.jpeg"
                                alt="" width="100%" border="0"
                                style="border-radius: 40px; display: block; margin: 0 auto;">
                        </td>
                    </tr>

                    <!-- Headline -->
                    {{!-- <tr>
                        <td style="padding: 0 20px 20px;">
                            <h1 style="margin: 0; font-size: 22px; text-align: left;">Welcome to Olsen Bakehouse!</h1>
                        </td>
                    </tr> --}}

                    <!-- Hero Image -->
                    <!-- <tr>
							<td style="padding: 20px;">
								<img src="images/hero.jpg" alt="Some descriptive alternative text" width="600" border="0" style="border-radius: 4px; display: block; max-width: 100%; min-width: 100px; width: 100%;">
							</td>
						</tr> -->

                    <!-- Body copy -->
                    <tr>
                        <td style="padding: 20px;">
                            <p style="margin: 0 0 20px 0;">Hi {{name}}, <br /> You recently requested to reset
                                your password for your Olsen Bakehouse account. Click the button below to reset it.
                            </p>
                        </td>
                    </tr>

                    <!-- Button -->
                    <tr>
                        <td style="padding: 0 0 0 20px;">
                            <!-- CTA generated by buttons.com -->

                            <div>
                                <!--[if mso]>
										<v:roundrect xmlns:v="urn:schemas-microsoft-com:vml" xmlns:w="urn:schemas-microsoft-com:office:word" href={{ WEBSITE_URL }} style="height:40px;v-text-anchor:middle;width:100px;" arcsize="10%" strokecolor="#d7c9b2" fillcolor="#7e5000">
											<w:anchorlock/>
